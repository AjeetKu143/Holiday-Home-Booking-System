<% layout("/layouts/boilerplate") %>

    <div class="row">
        <div class="col-8 offset-3">
            <h3 class="new-header">Listing Details</h3>
        </div>

        <div class="card col-6 offset-3">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_img">
            <div class="card-body">
                <p>
                    <b>
                        <%= listing.title %>
                    </b><br>
                    <%= listing.description %><br>
                        â‚¹ <%= listing.price.toLocaleString("en-IN") %> / Night<br>
                            <%= listing.location %><br>
                                <%= listing.country %>
                </p>

            </div>
        </div>

        <div class="d-flex justify-content-center col-8 offset-2" style="gap: 0.3rem;">
            <form action="/listings/<%= listing._id %>/edit">
                <button class="btn btn-primary">Edit Listing</button>
            </form>

            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-danger">Delete Listing</button>
            </form>
        </div>
    </div>