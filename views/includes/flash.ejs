<% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade mt-2 show col-6 offset-3" role="alert">
        <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

        <% if (error && error.length) { %>
            <div class="alert alert-danger alert-dismissible fade mt-2 show col-6 offset-3" role="alert">
                <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>

                <% if (deleteSuccess && deleteSuccess.length) { %>
                    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-2" role="alert">
                        <%= deleteSuccess %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>

                        <% if (updateSuccess && updateSuccess.length) { %>
                            <div class="alert alert-primary alert-dismissible fade show col-6 offset-3 mt-2"
                                role="alert">
                                <%= updateSuccess %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Close"></button>
                            </div>
                            <% } %>